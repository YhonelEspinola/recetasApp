<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="60dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:hint="多Olvidaste tu contrase単a?"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/heart"
        app:layout_constraintBottom_toBottomOf="@id/textTitulo"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/candado" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:text="Recuperar Contrase単a"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/heart"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:text="Ingrese tu correo  para buscar tu cuenta"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEnviarSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Contrase単a"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/heart"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textOlvidarContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver a Iniciar Sesion"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>